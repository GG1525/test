{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "types": ["./types/*"],
    "moduleResolution": "node",
    // "typeRoots": [
    //   "vue/types/vue"
    // ]
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}